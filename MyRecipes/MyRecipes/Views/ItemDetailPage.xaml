<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRecipes.Views.ItemDetailPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Clicked="OnDelete">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="cancel.png"/>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem Text="Save" Clicked="Update_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="save.png"/>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Title:" FontSize="Medium" />
        <Entry Text="{Binding MyRecipe.Title}" FontSize="Small"/>
        <Label Text="{Binding MyRecipe.Id}" FontSize="Small"/>
        <Label Text="Ingredients:" FontSize="Medium" />
        <Entry Text="{Binding MyRecipe.Ingredients}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Entry Text="{Binding MyRecipe.Description}" FontSize="Small"/>
    </StackLayout>
</ContentPage>